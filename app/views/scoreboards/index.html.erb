<p id="notice"><%= notice %></p>

<h1>Scoreboards</h1>

<table>
  <thead>
    <tr>
      <th>Home team score</th>
      <th>Away team score</th>
      <th>Home team timeouts remaining</th>
      <th>Away team timeouts remining</th>
      <th>Period</th>
      <th>Home team fouls</th>
      <th>Away team fouls</th>
      <th>Posession arrow</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scoreboards.each do |scoreboard| %>
      <tr>
        <td><%= scoreboard.home_team_score %></td>
        <td><%= scoreboard.away_team_score %></td>
        <td><%= scoreboard.home_team_timeouts_remaining %></td>
        <td><%= scoreboard.away_team_timeouts_remining %></td>
        <td><%= scoreboard.period %></td>
        <td><%= scoreboard.home_team_fouls %></td>
        <td><%= scoreboard.away_team_fouls %></td>
        <td><%= scoreboard.posession_arrow %></td>
        <td><%= link_to 'Show', scoreboard %></td>
        <td><%= link_to 'Edit', edit_scoreboard_path(scoreboard) %></td>
        <td><%= link_to 'Destroy', scoreboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

