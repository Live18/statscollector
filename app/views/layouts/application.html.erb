<!DOCTYPE html>
<html>
  <head>
    <title>Statscollect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'StatsCollect', root_path, class: 'navbar' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Teams', teams_path, class: 'navbar' %>
      </li>
      <li class="nav-item active">
        <%= link_to 'Schedule', games_path, class: 'navbar' %>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="nav-item">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to current_user.email, edit_user_registration_path(), method: :get, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
        </li>
        <% end %>
      </li>
    </ul>
    
  </div>
</nav>
    <% if notice %>
      <p class='alert alert-success'><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class='alert alert-danger'><%= alert %></p>
    <% end %>
    <div class="container" style="margin-top: 50px">
      <%= yield %>
    </div>
  </body>
</html>
